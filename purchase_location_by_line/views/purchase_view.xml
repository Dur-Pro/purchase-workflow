<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_form_location_by_line" model="ir.ui.view">
        <field name="name">purchase.order.form.location_by_line</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//field[@name='date_planned']" position="after">
                <field name="location_dest_id" />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_line_form_location_by_line2" model="ir.ui.view">
        <field name="name">purchase.order.line.form.location_by_line</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2" />
        <field name="arch" type="xml">
            <field name='date_planned' position="after">
                <field name="location_dest_id" />
            </field>
        </field>
    </record>
    <record id="purchase_order_line_tree_location_by_line" model="ir.ui.view">
        <field name="name">purchase.order.line.tree.location_by_line</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree" />
        <field name="arch" type="xml">
            <field name='date_planned' position="after">
                <field name="location_dest_id" />
            </field>
        </field>
    </record>
</odoo>
